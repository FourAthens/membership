<section class="heading-section section section-on-bg">
  <div class="hero-wrapper">
    <div class="hero-holder"></div>
    <div class="hero-mask-gradient"></div>
  </div><!--//hero-wrapper-->
  <div class="container heading-content">
    <h2 class="headline">Membership Details</h2>
    <div class="intro">Our membership plans grow with you</div>
    <div class="actions">
     <a class="scrollto" href="#monthly-pricing-block">View Plans</a>
     <a class="scrollto" href="#monthly-pricing-block"><%= image_tag 'arrow-icon.svg'%></a>
   </div><!--//actions-->
 </div><!--//container-->
</section><!--//heading-section-->

<div class="page-nav-space-holder hidden-xs">
  <div id="page-nav-wrapper" class="page-nav-wrapper text-center">
    <div class="container">
      <ul id="page-nav" class="page-nav nav list-inline">
        <li><a class="scrollto" href="#monthly-pricing-block">Monthly Plans</a></li>
        <li><a class="scrollto" href="#annual-pricing-block">Annual Plans</a></li>
        <!-- <li><a class="scrollto"  href="#faqs-block">FAQs</a></li> -->
      </ul><!--//page-nav-->
    </div>
  </div><!--//page-nav-wrapper-->
</div><!--//page-nav-space-holder-->
<div class="pricing-block" id="monthly-pricing-block">
  <div class="container">
    <h2 class="block-heading text-center">Monthly Membership Plans</h2>
    <div class="row">
      <% @monthly_plans.each do |plan| %>
        <div class="item item-<%= plan.id %> col-xs-12 col-sm-6 col-md-3">
          <div class="item-inner">
            <div class="summary-box text-center">
              <h3 class="item-heading"><%= plan.name %></h3>
              <div class="item-intro"><%= plan.description %></div>
              <div class="price">
                <span class="number"><%= number_to_currency(plan.price / 100) %></span>
              </div><!--//price-->
              <div class="unit"> <%= plan.frequency %> </div>
              <div class="action">
                <div class="btn-container">
                  <%= link_to "Join Now", new_profile_path(stripe_plan_id: plan.stripe_plan_id), class: 'btn btn-secondary btn-ghost' %>
                </div>
              </div>
            </div><!--//summary-box-->
            <div class="details-box">
              <ul class="details-list plan-details list-unstyled">
                <% plan.plan_details.each do |detail| %>
                  <% if detail.href.blank? %>
                    <li><i class="fa fa-check" aria-hidden="true"></i> <%= detail.content %></li>
                  <% else %>
                    <li><i class="fa fa-check" aria-hidden="true"></i> <%= link_to detail.content, detail.href %></li>
                  <% end %>
                <% end %>
              </ul>
            </div><!--//details-box-->
          </div><!--//item-inner-->
        </div><!--//item-->
      <% end %>
    </div><!--//row-->
  </div><!--//container-->
</div><!--//pricing-block-->
