<div class="pricing-block" id="pricing-block">
  <div class="container">
    <h2 class="block-heading text-center">30 day FREE trial with all plans! </h2>
    <div class="row">

      <% @monthly_plans.each do |plan| %>
        <div class="item item-<%= plan.id %> col-xs-12 col-sm-6 col-md-3">
          <div class="item-inner">
            <div class="summary-box text-center">
              <h3 class="item-heading"><%= plan.name %></h3>
              <div class="item-intro">For basic use lorem ipsum dolor sit amet, consectetuer adipiscing elit.</div>
              <div class="price">
                <span class="number"><%= number_to_currency(plan.price / 100) %></span>
              </div><!--//price-->
              <div class="unit"> <%= plan.frequency %> </div>
              <div class="action">
                <div class="btn-container"><a href="#" class="btn btn-secondary btn-ghost">Sign Up Now</a></div>
                <div class="note">(30 day free trial)</div>
              </div>
            </div><!--//summary-box-->
            <div class="details-box">
              <ul class="details-list list-unstyled">
                <% plan.plan_details.each do |detail| %>
                  <li><i class="fa fa-check" aria-hidden="true"></i> <%= detail.content %></li>
                <% end %>
              </ul>
            </div><!--//details-box-->

          </div><!--//item-inner-->
        </div><!--//item-->
      <% end %>
    </div><!--//row-->
  </div><!--//container-->
</div><!--//pricing-block-->

